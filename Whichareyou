        const questionPages = document.querySelectorAll('.question-page');
        const startButton = document.getElementById('start-button');
        const startContainer = document.getElementById('start-container');
        const quizContainer = document.getElementById('quiz-container');
        const resultsContainer = document.getElementById('results-container');
        const quizForm = document.getElementById('quiz-form');
        const progressDotsContainer = document.getElementById('progress-dots');
        const nextButtons = document.querySelectorAll('.next-button');
        const submitButton = document.getElementById('submit-button');
        const restartButton = document.getElementById('restart-button');
        const resultName = document.getElementById('result-name');
        const resultImage = document.getElementById('result-image');
        const resultImageLink = document.getElementById('result-image-link');
        const resultText = document.getElementById('result-text');
        const loadingMessage = document.getElementById('loading-message');

        let currentQuestionIndex = 0;
        let totalScore = 0;
        let answers = {};
        
        function getCharacterByName(name) {
            return characterList.find(c => c.name === name);
        }

        function createDots() {
            progressDotsContainer.innerHTML = '';
            questionPages.forEach((_, index) => {
                const dot = document.createElement('div');
                dot.classList.add('w-3', 'h-3', 'rounded-full', 'transition-all', 'duration-300', 'ease-in-out', 'sm:w-4', 'sm:h-4');
                dot.classList.add('bg-gray-400');
                if (index === 0) {
                    dot.classList.add('bg-red-600', 'transform', 'scale-125', 'ring-2', 'ring-red-300', 'ring-opacity-75');
                }
                progressDotsContainer.appendChild(dot);
            });
        }

        function updateDots() {
            const dots = progressDotsContainer.children;
            Array.from(dots).forEach((dot, index) => {
                dot.classList.remove('bg-red-600', 'transform', 'scale-125', 'ring-2', 'ring-red-300', 'ring-opacity-75');
                dot.classList.add('bg-gray-400');
                if (index === currentQuestionIndex) {
                    dot.classList.remove('bg-gray-400');
                    dot.classList.add('bg-red-600', 'transform', 'scale-125', 'ring-2', 'ring-red-300', 'ring-opacity-75');
                }
            });
        }

        function showQuestion(index) {
            questionPages.forEach((page, i) => {
                page.classList.remove('active');
                if (i === index) {
                    page.classList.add('active');
                }
            });
            updateDots();
        }

        function handleNextClick() {
            const questionName = `question${currentQuestionIndex}`;
            const selectedOption = document.querySelector(`input[name="${questionName}"]:checked`);
            if (selectedOption) {
                answers[questionName] = selectedOption.value;
                if (currentQuestionIndex < questionPages.length - 1) {
                    currentQuestionIndex++;
                    showQuestion(currentQuestionIndex);
                }
            } else {
                alert("Please select an option before proceeding.");
            }
        }

        function calculateResults() {
    const questionName = `question${currentQuestionIndex}`;
    const selectedOption = document.querySelector(`input[name="${questionName}"]:checked`);
    if (!selectedOption) {
        alert("Please select an option before getting your result!");
        return;
    }
    answers[questionName] = selectedOption.value;

    quizContainer.style.display = 'none';
    loadingMessage.style.display = 'block';

    // Sum total score
    let totalScore = 0;
    for (const key in answers) {
        totalScore += parseInt(answers[key], 10);
    }

    // Find matching character by score range
    const match = characterScoreMap.find(
        c => totalScore >= c.minScore && totalScore <= c.maxScore
    );

    const result = match ? getCharacterByName(match.name) : null;

    setTimeout(() => {
        if (result) {
            resultName.textContent = result.name;
            resultImage.src = result.image;
            resultImageLink.href = result.link;
            resultText.innerHTML = result.description;
        } else {
            resultName.textContent = "Oops!";
            resultImage.src = "";
            resultImageLink.href = "#";
            resultText.innerHTML = "Something went wrong! Please try the quiz again.";
        }

        loadingMessage.style.display = 'none';
        resultsContainer.style.display = 'block';
    }, 1000);
}

        function restartQuiz() {
            quizForm.reset();
            currentQuestionIndex = 0;
            answers = {};
            showQuestion(currentQuestionIndex);
            quizContainer.style.display = 'block';
            resultsContainer.style.display = 'none';
        }

        startButton.addEventListener('click', () => {
            startContainer.classList.add('hidden');
            quizContainer.classList.remove('hidden');
            showQuestion(0);
        });

        nextButtons.forEach(button => {
            button.addEventListener('click', handleNextClick);
        });
        submitButton.addEventListener('click', calculateResults);
        restartButton.addEventListener('click', restartQuiz);

        window.onload = () => {
            createDots();
        };
    </script>
</body>
</html>
